{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "lib/**/*.ts",
      "lib/**/*.tsx",
      "lib/**/*.js",
      "lib/**/*.jsx",
      "./biome.json",
      "./package.json",
      "./tsconfig.json",
      "./vite.config.ts",
      "./tsconfig.app.json"

    ],
    "ignore": ["node_modules", "**/node_modules/**", "dist", "bin"],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "docs",
      "dist",
      "public",
      "**/node_modules/**",
      "bin"
    ],
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "json": {
      "formatter": {
          "indentWidth": 2,
          "indentStyle": "space"
      }
  }
}
